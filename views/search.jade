doctype html
head
    link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css")
    link(rel="stylesheet", href="../stylesheets/main.css")
    script(src="//code.jquery.com/jquery-1.11.3.min.js")
    script(src="//code.jquery.com/jquery-migrate-1.2.1.min.js")
    script(src="https://cdn.firebase.com/js/client/2.2.6/firebase.js")
    script(src="../scripts/list.js")
    script(src="../scripts/headerAndFooter.js")
    script(src="../scripts/search.js")
body
    .page-content
        .col-md-3
        .col-md-6
            .row
                table.table.table-striped#container_list
                    thead
                        tr
                            th(colspan="3")
                                input(type="text" placeholder="Search").search.form-control
                        tr
                            td(style="width:30%;")
                                span(data-sort="title").sort.title Speech Title
                            td(style="width:20%;")
                                span(data-sort="author").sort.author Author Name
                            td(style="width:30%;")
                                span(data-sort="categories").sort.categories Categories
                    tbody.list
                        tr
                            td(style="width:30%;").title
                            td(style="width:20%;").author
                            td(style="width:30%;").categories
        .col-md-3
        div(style="clear: both;")
